<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/headbg"
        android:orientation="horizontal" >

      

        <TextView
            android:id="@+id/group_name_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Party"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

      
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        >
        
       <TextView
            android:id="@+id/js_ins_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hold Birthday Party"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:padding="5dp"
            android:textStyle="bold" /> 
            
       <FrameLayout 
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/gray"
           ></FrameLayout>
        
         <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/com_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Comment"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="5dp"
            android:textStyle="bold" /> 
             
         <TextView
            android:id="@+id/see_com_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Check Comment"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="5dp"
            android:textStyle="bold" /> 
    
         <TextView
            android:id="@+id/see_join_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Joiner"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="5dp"
            android:textStyle="bold" /> 
    
     <TextView
            android:id="@+id/see_party_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Check Party"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="5dp"
            android:textStyle="bold" /> 

        
      </LinearLayout>
        
         
       
    
         
         
         
         
         
         
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <EditText 
        android:id="@+id/add_msg_et"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:layout_weight="1"
        />
        <Button 
            android:id="@+id/send_bt"
            android:layout_width="wrap_content"
            android:layout_height="50dp" 
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Send"
            />
    </LinearLayout>
   
    
    
       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Chating Room"
            android:textColor="#000000"
            android:textSize="18sp"
            android:padding="5dp"
            android:textStyle="bold" />
    
      <ListView 
          android:id="@+id/msg_lv"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/list_item_selector"
          android:scrollbars="none"
          />

</LinearLayout>