<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dp" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
       android:id="@+id/bx_date"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:text="1"
        
        />
        <TextView 
       android:id="@+id/wx_fee"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="1"
         android:text="1"
        />
        
    </LinearLayout>
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
       android:id="@+id/jd_staff"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="1"
         android:text="1"
        />
        <TextView 
       android:id="@+id/wx_staff"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="1"
         android:text="1"
        />
        
    </LinearLayout>
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
       android:id="@+id/wx_date"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="1"
         android:text="1"
        />
        <TextView 
       android:id="@+id/status"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="1"
         android:text="1"
        />
        
    </LinearLayout>
     <TextView 
       android:id="@+id/bx_con"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
         android:text="1"
         android:visibility="gone"
        />
</LinearLayout>