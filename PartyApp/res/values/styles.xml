<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar">
    </style>
    <style name="text_head">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="main_itemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>
    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style> 
    
    <style name="theme_fontcolor_blake">
        <item name="android:textColor">#000</item>
    </style>

    <style name="theme_fontcolor_red">
        <item name="android:textColor">#CE4040</item>
    </style>

    <style name="theme_fontcolor_CCC">
        <item name="android:textColor">#CCC</item>
    </style>

    <style name="theme_fontcolor_white">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="style_line">
        <item name="android:layout_height">1px</item>
        <item name="android:background">#b7b7b7</item>
    </style>
    
     <style name="sel">
        <item name="android:textSize">@dimen/text_size_19</item>
		<item name="android:textColor">@color/head_text</item>
		<item name="android:textStyle">bold</item>
    </style>
   <style name="nor">
        <item name="android:textSize">@dimen/text_size_16</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textStyle">normal</item>
   </style>
    
   <style name="home_tab_bottom">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
    </style>
    
   
    <style name="text_black_mid" parent="@style/text_black">
        <item name="android:textSize">16sp</item>
    </style>
   

    <style name="text_black">
        <item name="android:textColor">@drawable/default_text_color</item>
    </style>

    <style name="text_black_small" parent="@style/text_black">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="text_date_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#C4C4C4</item>
        <item name="android:layout_margin">1dp</item>
    </style>
    
     <style name="AlertDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/popup_bg</item>
    </style>
    
      <style name="title_update_progressbar_style">
        <item name="android:maxWidth">45.0dip</item>
        <item name="android:maxHeight">45.0dip</item>
        <item name="android:indeterminateDrawable">@anim/title_update_anim</item>
        <item name="android:minWidth">45.0dip</item>
        <item name="android:minHeight">45.0dip</item>
    </style>

    <style name="ActionBarProgressBar" parent="@style/title_update_progressbar_style"></style>
    
     
    <style name="base_listview_style" parent="@android:style/Widget.ListView">
        <item name="android:scrollbarThumbVertical">@drawable/base_list_scrollbar_handle</item>
        <item name="android:fadingEdgeLength">0.0dip</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:listSelector">@drawable/base_list_selector</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0.0dip</item>
    </style>
    
    <style name="base_large_progressbar_style">
        <item name="android:maxWidth">38.0dip</item>
        <item name="android:maxHeight">38.0dip</item>
        <item name="android:indeterminateDrawable">@anim/base_loading_large_anim</item>
        <item name="android:minWidth">38.0dip</item>
        <item name="android:minHeight">38.0dip</item>
    </style>
    
    	
    
    <style name="text_black_18">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_black_20">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
</resources>
